                    bold: True
                    text: "2º"
                Label:
                    font_size: dp(32)
                    color: 0.91, 0.94, 0.56, 1
                    bold: True
                    text: "3º"
                Label:
                    font_size: dp(32)
                    color: 0.91, 0.94, 0.56, 1
                    bold: True
                    text: "4º"
                Label:
                    font_size: dp(32)
                    color: 0.91, 0.94, 0.56, 1
                    bold: True
                    text: "5º"


        Label:
            pos_hint: {"right": 0.985, "top": 1.205}
            size_hint: 0.95, 1
