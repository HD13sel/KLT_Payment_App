<ResSelecLado3Page>
    FloatLayout:
        Label:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.2
            font_size: dp(40)
            color: 0.91, 0.94, 0.56, 1
            bold: True
            font_name: "righteous"
            valign: 'middle'
            text: "LADOS DISPONÍVEIS"
        Image:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.5
            source: "icones/klt_car_front.png"

        # botao_esq
        Button:
            canvas.before:
                Color:
                    rgba: (0, 0, 0, 0.225)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            background_color: (0, 0, 0, 0)
            pos_hint: {"right": 0.5, "top": 0.75}
            size_hint: 0.5, 0.5
            bold: True
            font_size: dp(32)
            color: 0.91, 0.94, 0.56, 1
            text: "ESQUERDO"
            on_release: app.mudar_tela('resladoesq3page')
            id: botao_carro_esquerdo

        # botao_dir
        Button:
            canvas.before:
                Color:
                    rgba: (0, 0, 0, 0.225)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            background_color: (0, 0, 0, 0)
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 0.5, 0.5
            bold: True
            font_size: dp(32)
            color: 0.91, 0.94, 0.56, 1
            text: "DIREITO"
            on_release: app.mudar_tela('resladodir3page')
            id: botao_carro_direito

        # image lado_dir check
        Image:
            pos_hint: {"right": 1.255, "top": 1.25}
            size_hint: 1, 1
            id: lado_dir_check
            source: root.check_dir
        # image lado_esq check
        Image:
            pos_hint: {"right": 0.775, "top": 1.25}
            size_hint: 1, 1
            id: lado_esq_check
            source: root.check_esq

        # local
        Label:
            canvas.before:
                Color:
                    rgba: (0, 0, 0, 0.45)
                RoundedRectangle:
                    size: self.width , self.height
                    pos: self.x, self.y
                    radius: [15]
            pos_hint: {"right": 0.95, "top": 0.235}
            size_hint: 0.675, 0.05
            font_size: dp(20)
            color: 0.91, 0.94, 0.56, 1
            bold: True
            valign: "middle"
            text: root.label_parada
            id: label_local_res
        Button:
            canvas.before:
                Color:
                    rgba: (0.91, 0.94, 0.56, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
            background_color: (0, 0, 0, 0)
            text: '<'
            font_name: "righteous"
            bold: True
            font_size: dp(50)
            color: 0, 0, 0, 1
            pos_hint: {"right": 0.2, "top": 0.25}
            size_hint: 0.175, 0.075
            on_release: root.voltar_rota()

        # carrinho
        Label:
            canvas.before:
                Color:
                    rgba: (0, 0, 0, 0.45)
                RoundedRectangle:
                    size: self.width , self.height
                    pos: self.x, self.y
                    radius: [15]
            pos_hint: {"right": 0.95, "top": 0.15}
            size_hint: 0.675, 0.05
            font_size: dp(20)
            color: 0.91, 0.94, 0.56, 1
            bold: True
            valign: "middle"
            text: 'CARRINHO: 3º'
            id: label_carrinho_res
        Button:
            canvas.before:
                Color:
                    rgba: (0.91, 0.94, 0.56, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]
            background_color: (0, 0, 0, 0)
            text: '<'
            font_name: "righteous"
            bold: True
            font_size: dp(50)
            color: 0, 0, 0, 1
            pos_hint: {"right": 0.2, "top": 0.1655}
            size_hint: 0.175, 0.075
            on_release: root.voltar_carrinho()